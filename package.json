{
  "name": "camille",
  "version": "0.1.0",
  "description": "A tools-enabled, remotely accessible but spiritually local-first AI personal assistant",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "camille": "dist/cli.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "build:check": "tsc --noEmit",
    "start": "node dist/index.js",
    "cli": "tsx src/cli.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "commander": "^12.0.0",
    "grammy": "^1.25.0",
    "smol-toml": "^1.3.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^22.0.0",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "tsx": "^4.0.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
